<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room_configure_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp18"
    android:layout_marginRight="@dimen/dp18"
    android:layout_marginTop="@dimen/dp20"
    android:orientation="vertical"
    android:visibility="visible"
    >

    <LinearLayout
        android:id="@+id/r_ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi_off" />

            <TextView
                android:id="@+id/hc_tv_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/wifi"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_heater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reshuiqi_off" />

            <TextView
                android:id="@+id/hc_tv_heater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/heater"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_desk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shuzhuo_off" />

            <TextView
                android:id="@+id/hc_tv_desk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/desk"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_washer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiyiji_off" />

            <TextView
                android:id="@+id/hc_tv_washer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/washer"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_refrigerator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bingxiang_off" />

            <TextView
                android:id="@+id/hc_tv_refrigerator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/refrigerator"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_balcony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yangtai_off" />

            <TextView
                android:id="@+id/hc_tv_balcony"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/balcony"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/r_ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_microwave_oven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weibolu_off" />

            <TextView
                android:id="@+id/hc_tv_microwave_oven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/microwave_oven"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_gas_furnace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ranqizao_off" />

            <TextView
                android:id="@+id/hc_tv_gas_furnace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/gas_furnace"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_cooker_hood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/youyanji_off" />

            <TextView
                android:id="@+id/hc_tv_cooker_hood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/cooker_hood"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_electromagnetic_oven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/diancilu_off" />

            <TextView
                android:id="@+id/hc_tv_electromagnetic_oven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/electromagnetic_oven"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chuang_off" />

            <TextView
                android:id="@+id/hc_tv_bed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/bed"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_sofa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shafa_off" />

            <TextView
                android:id="@+id/hc_tv_sofa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/sofa"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r_ll_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginBottom="@dimen/dp32"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_air_conditioner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kongtiao_off" />

            <TextView
                android:id="@+id/hc_tv_air_conditioner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/air_conditioner"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_wardrobe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yigui_off" />

            <TextView
                android:id="@+id/hc_tv_wardrobe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/wardrobe"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_television"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dianshi_off" />

            <TextView
                android:id="@+id/hc_tv_television"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/television"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hc_iv_toilet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weishengjian_off" />

            <TextView
                android:id="@+id/hc_tv_toilet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/toilet"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi_off" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/wifi"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi_off" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:gravity="center"
                android:text="@string/wifi"
                android:textColor="@color/d2d2d2"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>