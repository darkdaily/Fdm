<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.admin.fdm.ui.activity.AboutActivity">

    <include layout="@layout/action_greenbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp25"
            android:background="#A2D065"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/laba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp15"
                android:src="@drawable/laba" />

            <TextView
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/laba"
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp12"
                android:textColor="@color/white"
                android:text="首页-点击头像既可修改个人资料"
                />

            <ImageView
                android:id="@+id/iv_delete_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/yuancha" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/green"></FrameLayout>

        <com.example.admin.fdm.ui.view.RoundImageView
            android:id="@+id/img_user_icon"
            android:layout_width="@dimen/dp86"
            android:layout_height="@dimen/dp86"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_sit" />

        <ImageView
            android:layout_width="@dimen/dp86"
            android:layout_height="@dimen/dp86"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/usericon_bg_circle" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp14"
            android:text="名字"
            android:textColor="@color/toolbartitle"
            android:textSize="@dimen/sp19" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp48"
        android:gravity="center"
        android:text="@string/company_name"
        android:textColor="@color/gray999"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp18"
        android:gravity="center"
        android:text="一个很长的公司"
        android:textColor="@color/toolbartitle"
        android:textSize="@dimen/sp20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp43"
        android:layout_marginRight="@dimen/dp43"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/divider_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp43"
        android:gravity="center"
        android:text="@string/phone"
        android:textColor="@color/gray999"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp18"
        android:gravity="center"
        android:text="138XXXXXXXX"
        android:textColor="@color/toolbartitle"
        android:textSize="@dimen/sp20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp43"
        android:layout_marginRight="@dimen/dp43"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/divider_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp43"
        android:gravity="center"
        android:text="@string/trading_area"
        android:textColor="@color/gray999"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/trading_area_butten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp18"
        android:gravity="center"
        android:text="请选择商圈内容"
        android:textColor="@color/toolbartitle"
        android:textSize="@dimen/sp20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp43"
        android:layout_marginRight="@dimen/dp43"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/divider_color" />

</LinearLayout>
