<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.admin.fdm.ui.activity.DealEvaluateActivity"
    tools:ignore="NamespaceTypo">

    <include layout="@layout/action_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.admin.fdm.ui.view.EmptyView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

        </com.example.admin.fdm.ui.view.EmptyView>

        <LinearLayout
            android:id="@+id/ll_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_bg"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp13"
                        android:layout_marginTop="@dimen/dp16"
                        android:text="@string/broker_service"
                        android:textColor="@color/toolbartitle"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp13"
                        android:layout_marginRight="@dimen/dp13"
                        android:layout_marginTop="@dimen/dp21"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:paddingTop="5dp">

                            <ImageView
                                android:id="@+id/broker_icon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="13dp"
                                android:src="@drawable/user_sit" />

                            <TextView
                                android:id="@+id/broker_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/broker_icon"
                                android:text="王代伟"
                                android:textColor="#2a2e32"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/broker_company_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/broker_name"
                                android:layout_marginTop="3dp"
                                android:layout_toRightOf="@id/broker_icon"
                                android:text="链家地产"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_publish_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="#aaa"
                                android:textSize="11sp" />

                            <com.example.admin.fdm.ui.view.StartBar
                                android:id="@+id/broker_start"
                                android:layout_width="100dp"
                                android:layout_height="14dp"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/tv_publish_time"
                                android:layout_marginTop="8dp" />

                        </RelativeLayout>

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/broker_flowlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            zhy:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>

                        <TextView
                            android:id="@+id/tv_broker_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp15"
                            android:layout_marginTop="@dimen/dp15"
                            android:padding="5dp"
                            android:text="房子很大，也很安静，回去跟朋友商量准备签约，非常满意卧室超级大，很干净，回去跟朋友商量准备签约。"
                            android:textColor="@color/toolbartitle"
                            android:textSize="@dimen/sp13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/activity_bg" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp13"
                        android:layout_marginTop="@dimen/dp16"
                        android:background="@color/white"
                        android:text="@string/house_evaluation"
                        android:textColor="@color/toolbartitle"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp13"
                        android:layout_marginRight="@dimen/dp13"
                        android:layout_marginTop="@dimen/dp21"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/house_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="百子湾小区百子湾小区"
                                android:textColor="#2a2e32"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/house_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/house_name"
                                android:layout_marginTop="3dp"
                                android:text="一室一厅一卫"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textColor="#aaa"
                                android:textSize="11sp" />

                            <com.example.admin.fdm.ui.view.StartBar
                                android:id="@+id/house_start"
                                android:layout_width="100dp"
                                android:layout_height="14dp"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/tv_time"
                                android:layout_marginTop="8dp" />

                        </RelativeLayout>

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/house_flowlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            zhy:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>

                        <TextView
                            android:id="@+id/tv_house_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp15"
                            android:padding="5dp"
                            android:text="房子很大，也很安静，回去跟朋友商量准备签约，非常满意卧室超级大，很干净，回去跟朋友商量准备签约。"
                            android:textColor="@color/toolbartitle"
                            android:textSize="@dimen/sp13" />

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/fl_pic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/user_icon"
                            android:layout_marginBottom="@dimen/dp15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/activity_bg" />

                    <LinearLayout
                        android:id="@+id/ll_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp13"
                            android:layout_marginTop="@dimen/dp16"
                            android:text="@string/company_impressions"
                            android:textColor="@color/toolbartitle"
                            android:textSize="@dimen/sp14" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp13"
                            android:layout_marginRight="@dimen/dp13"
                            android:layout_marginTop="@dimen/dp21"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:paddingTop="5dp">

                                <ImageView
                                    android:id="@+id/company_icon"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="13dp"
                                    android:src="@drawable/user_sit" />

                                <TextView
                                    android:id="@+id/company_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/company_icon"
                                    android:text="链家地产"
                                    android:textColor="#2a2e32"
                                    android:textSize="15sp" />


                                <TextView
                                    android:id="@+id/tv_time_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="#aaa"
                                    android:textSize="11sp" />

                                <com.example.admin.fdm.ui.view.StartBar
                                    android:id="@+id/company_start"
                                    android:layout_width="100dp"
                                    android:layout_height="14dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_below="@id/tv_time_one"
                                    android:layout_marginTop="8dp" />

                            </RelativeLayout>

                            <com.zhy.view.flowlayout.TagFlowLayout
                                android:id="@+id/company_flowlayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                zhy:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>

                            <TextView
                                android:id="@+id/tv_company_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp15"
                                android:layout_marginTop="@dimen/dp15"
                                android:padding="5dp"
                                android:text="房子很大，也很安静，回去跟朋友商量准备签约，非常满意卧室超级大，很干净，回去跟朋友商量准备签约。"
                                android:textColor="@color/toolbartitle"
                                android:textSize="@dimen/sp13" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
