<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            style="@style/gray_text_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="订单号:" />

            <TextView
                android:id="@+id/order_number"
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:gravity="right"
                android:text="123123213213123" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支付时间:" />


            <TextView
                android:id="@+id/pay_tima"
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:text="2017-10-21" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已收金额:" />

            <TextView
                android:id="@+id/received_money"
                style="@style/gray_text_13sp_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:text="¥6000" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <TextView
            style="@style/gray_text_13sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="代理商:" />

        <TextView
            android:id="@+id/agent"
            style="@style/gray_text_13sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:text="扎根网" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:id="@+id/promotion_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入住人信息:" />

            <TextView
                android:id="@+id/tenant_name"
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:text="姓名" />

            <TextView
                android:id="@+id/tenant_tel"
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:text="手机号" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/brokerage_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经纪人信息:" />

            <TextView
                android:id="@+id/agent_name"
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:text="姓名" />

            <TextView
                android:id="@+id/agent_tel"
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp10"
                android:text="手机号" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>