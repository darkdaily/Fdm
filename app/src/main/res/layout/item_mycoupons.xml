<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10"
    android:background="@color/activity_bg"
    android:paddingTop="@dimen/dp10"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jingjigongsiweishiyong">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10">

                <ImageView
                    android:id="@+id/iv_company_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp20"
                    android:background="@drawable/user_sit" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/white_text_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/iv_company_icon"
                    android:text="崔始源  " />


                <TextView
                    android:id="@+id/textView3"
                    style="@style/white_text_11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_toRightOf="@id/iv_company_icon"
                    android:text="123****1233" />

            </RelativeLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp9"
                android:layout_marginTop="22dp"
                android:layout_toLeftOf="@+id/coupons_number"
                android:text="¥"
                android:textColor="@color/activity_bg"
                android:textSize="@dimen/sp18" />


            <TextView
                android:id="@+id/coupons_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:text="300"
                android:textColor="@color/white"
                android:textSize="40sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/coupons_number"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_naozhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp20"
                    android:src="@drawable/naozhong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_toRightOf="@+id/iv_naozhong"
                    android:text="2018.01-11 - 2018.01-20"
                    android:textColor="@color/textgray"
                    android:textSize="12dp" />


                <ImageView
                    android:id="@+id/iv_dianjuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp14"
                    android:layout_marginTop="@dimen/dp40"
                    android:src="@drawable/dianjuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp40"
                    android:layout_toRightOf="@+id/iv_dianjuan"
                    android:text="限领 20张 / 已领 2张"
                    android:textColor="@color/textgray"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_green"
                    android:layout_width="66dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp25"
                    android:layout_marginBottom="@dimen/dp15"
                    android:gravity="center"
                    android:text="查看"
                    android:textColor="@color/text_green"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>