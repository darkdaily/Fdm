<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:background="@color/activity_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:padding="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/takelook_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-10-31"
            android:textSize="@dimen/sp14"
            android:layout_marginRight="@dimen/dp10"
            android:textColor="@color/toolbartitle"/>

        <TextView
            android:id="@+id/tv_takelook_state"
            android:textSize="12sp"
            android:text="用户待支付"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <include layout="@layout/item_takelook_house" />


    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:background="@drawable/user_sit"
                android:id="@+id/iv_company_icon"
                android:layout_width="36dp"
                android:layout_marginRight="10dp"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_toRightOf="@id/iv_company_icon"
                android:text="崔始源  "
                android:layout_alignTop="@+id/iv_company_icon"
                style="@style/gray_text_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_user_tel"
                style="@style/gray_text_13sp"
                android:text="123****1233"
                android:layout_alignBottom="@+id/iv_company_icon"
                android:layout_toRightOf="@id/iv_company_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            >

            <TextView
                android:id="@+id/tv_black"
                android:text="@string/delete"
                android:background="@drawable/black_border_bg"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:textSize="@dimen/sp12"
                android:textColor="@color/toolbartitle"
                android:layout_marginRight="@dimen/dp10"
                />

            <TextView
                android:id="@+id/tv_green"
                android:textSize="@dimen/sp12"
                android:textColor="@color/green"
                android:text="@string/revise_price"
                android:background="@drawable/green_border_bg"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="25dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>