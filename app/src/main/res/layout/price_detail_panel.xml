<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/price_detail_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            style="@style/gray_text_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格明细" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_rent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_text_13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租金（" />
                <TextView
                    android:id="@+id/rent_unit_price"
                    style="@style/gray_text_13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000" />
                <TextView
                    style="@style/gray_text_13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/月）" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rent_count"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="*3" />

            <TextView
                android:id="@+id/rent_money"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="¥6000" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="押金" />

            <TextView
                android:id="@+id/tv_deposit_count"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="*1" />

            <TextView
                android:id="@+id/deposit_money"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="¥2000" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_agent_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="中介费" />

            <TextView
                android:id="@+id/middle_count"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="*3" />

            <TextView
                android:id="@+id/middle_money"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="¥6000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_serve_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="服务费" />

            <TextView
                android:id="@+id/service_count"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="*3" />

            <TextView
                android:id="@+id/service_money"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="¥6000" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/promotion_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/cuxiaohuodong"
                android:text="  促销活动" />

            <TextView
                android:id="@+id/promotion_discount_number"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="满300减200" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/brokerage_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/jingjigongsiyouhuijuan"
                android:text="  经纪公司优惠券" />

            <TextView
                android:id="@+id/brokerage_discount_number"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="-200" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/zhagen_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/zhagenyouhuijuan"
                android:text="  扎根优惠券" />

            <TextView
                android:id="@+id/zhagen_discount_number"
                style="@style/gray_text_13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="-200" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:padding="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应收款:   "
            android:textColor="#2a2e32"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥10200"
            android:textColor="@color/price_red"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>