<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/re_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:background="@drawable/user_sit"
            android:id="@+id/iv_company_icon"
            android:layout_width="36dp"
            android:layout_marginRight="10dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_toRightOf="@id/iv_company_icon"
            android:text="崔始源  "
            android:layout_marginTop="@dimen/dp5"
            android:layout_alignTop="@+id/iv_company_icon"
            style="@style/gray_text_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            style="@style/gray_text_13sp"
            android:text="123****1233"
            android:layout_alignBottom="@+id/iv_company_icon"
            android:layout_toRightOf="@id/iv_company_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp12"
            android:textColor="@color/textgray"/>

        <TextView
            android:id="@+id/tv_deal_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+20000"
            android:textSize="@dimen/sp14"
            android:layout_alignParentRight="true"
            android:textColor="@color/toolbartitle"/>

        <TextView
            android:layout_marginTop="@dimen/dp14"
            android:layout_below ="@+id/tv_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp12"
            android:textColor="@color/textgray"/>

        <TextView
            android:layout_below ="@+id/tv_deal_number"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/tv_discount_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2000"
            android:textSize="@dimen/sp14"
            android:layout_alignParentRight="true"
            android:textColor="@color/toolbartitle"/>





    </RelativeLayout>

</LinearLayout>